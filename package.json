{
  "name": "dsmarket",
  "license": "MIT",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "deploy": "hardhat run ./scripts/deploy.js",
    "clean": "rm -r artifacts cache",
    "compile": "hardhat compile",
    "all": "yarn clean && yarn compile && yarn net",
    "net:eth": "ganache --fork ${ETH_RPC} --wallet.accounts=\"${DEPLOYER_PK}, 1000000000000000000000000\"",
    "net:bsc": "ganache --fork ${BSC_RPC} --wallet.accounts=\"${DEPLOYER_PK}, 1000000000000000000000000\"",
    "net:polygon": "ganache-cli --fork ${POLYGON_RPC} --wallet.accounts=\"${DEPLOYER_PK}, 1000000000000000000000000\""
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomiclabs/hardhat-ganache": "^2.0.1",
    "@openzeppelin/contracts": "^4.5.0",
    "dotenv": "^16.0.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.5.4",
    "ganache": "^7.0.3",
    "hardhat": "2.9.8",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha": "^10.0.0",
    "prettier": "^2.3.2"
  }
}
